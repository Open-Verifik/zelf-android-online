<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageview_type"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="7dp"
        android:background="@drawable/circle_blue"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/textview_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi"
            android:textSize="16sp"
            android:text=""
            android:textColor="@color/zTextColor"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:textColor="@color/zTextColor"
                android:text="" />

            <TextView
                android:id="@+id/textview_to_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="middle"
                android:text=""
                android:textColor="@color/zTextColor"/>


        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/textview_crypto_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semi"
            android:textSize="16sp"
            android:textColor="@color/zTextColor"
            android:text="-0.369 ETH"/>

        <TextView
            android:id="@+id/textview_usd_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/zTextColor"
            android:text="0.369 ETH"/>

    </LinearLayout>

</LinearLayout>