<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView"
    android:layout_width="295dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:foregroundGravity="center_horizontal"
    android:paddingHorizontal="40dp"
    app:cardBackgroundColor="@color/zBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:fontFamily="@font/poppins"
            android:paddingVertical="8dp"
            android:text="@string/move_gently"
            android:textAlignment="center"
            android:textColor="@color/zTextColor"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:textSize="18sp"
          />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:fontFamily="@font/poppins"
            android:text="@string/too_much_movement"
            android:textAlignment="center"
            android:textColor="@color/zTextColor"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginHorizontal="@dimen/margin_medium_2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/margin_medium"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/extreme_pose_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/extreme_detail1"
                android:paddingLeft="@dimen/margin_medium_2"
                android:textAlignment="textStart"
                android:textColor="@color/zTextColor"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/margin_medium_2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="center"
                android:layout_marginVertical="@dimen/margin_medium"
                android:src="@drawable/extreme_pose_2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:paddingLeft="@dimen/margin_medium_2"
                android:text="@string/extreme_detail2"
                android:textAlignment="textStart"
                android:textColor="@color/zTextColor"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="@dimen/margin_medium_2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="center"
                android:layout_marginVertical="@dimen/margin_medium"
                android:src="@drawable/extreme_head_pose1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="@string/extreme_detail3"
                android:paddingLeft="@dimen/margin_medium_2"
                android:textAlignment="textStart"
                android:textColor="@color/zTextColor"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="10dp">
            <androidx.appcompat.widget.AppCompatButton
                style="@style/button_positive_1_border"
                android:id="@+id/btnRetry"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:text="@string/retry"
                android:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

