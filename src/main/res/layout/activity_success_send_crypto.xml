<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/zBackground"
    tools:context=".ui.activity.wallet.success.SuccessSendCryptoActivity">

    <View
        android:id="@+id/view_loading"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/gradient_animation" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="140dp"
        android:src="@drawable/zelf_logo_2"
        android:layout_gravity="center"
        app:tint="@color/zTextColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/menda_bold"
        android:text="@string/activity_success_send_crypto_title"
        android:textAlignment="center"
        android:textColor="@color/zTextColor"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semi"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:text="@string/activity_success_send_crypto_desc"
        android:textAlignment="center"
        android:textColor="@color/zTextColor"
        android:textSize="14sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_done"
        style="@style/button_positive_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:text="@string/activity_success_send_crypto_button"
        android:textAllCaps="false"
        android:enabled="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/gradient_background">

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/send_crypto_success_foreground" />


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/send_crypto_success_foreground2" />

    </RelativeLayout>

</LinearLayout>