<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageview_network"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/textview_network"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:textColor="@color/zTextColor"
        android:text="" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/textview_crypto_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:textColor="#38A62B"
            android:text="-0.369 ETH"/>

        <TextView
            android:id="@+id/textview_usd_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/zTextColor"
            android:text="0.369 ETH"/>

    </LinearLayout>

</LinearLayout>