<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ZelfWallet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/zPrimary</item>
        <item name="colorAccent">#1C44F9</item>
        <item name="colorPrimaryDark">#BBC3FF</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">#000</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="loading_dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">#55000000</item>
    </style>

    <style name="button_base">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_semi</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="button_positive_1" parent="button_base">
        <item name="android:background">@drawable/button_positive_1_ripple</item>
        <item name="android:textColor">@drawable/button_positive_text_1</item>
    </style>

    <style name="button_positive_2" parent="button_base">
        <item name="android:background">@drawable/button_positive_2_ripple</item>
        <item name="android:textColor">@drawable/button_positive_text_2</item>
    </style>

    <style name="button_positive_3" parent="button_base">
        <item name="android:background">@drawable/button_positive_3_ripple</item>
        <item name="android:textColor">@drawable/button_positive_text_3</item>
    </style>

    <style name="button_positive_1_border" parent="button_base">
        <item name="android:background">@drawable/button_positive_1_border_ripple</item>
        <item name="android:textColor">@drawable/button_positive_text_1_border</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semi</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>